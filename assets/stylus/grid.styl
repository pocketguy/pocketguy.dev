@require 'mixins.styl';
@require 'vars.styl';

.container {
    display: flex;
    flex-direction: column;
    margin: auto;

    for k, v in viewports {
        +with-vp(k) {
            width: v.container-width;
        }
    }
}

.row {
    display: flex;
    flex-direction: row;
}

.col {
    flex: 1;
}

for i in (1 .. 12) {
    .col-{i} {
        display: flex;
        width: (i * 100 / 12) %;
    }
}

for k, v in viewport {
    for i in (1 .. 12) {
        .col-{k}-{i} {
            +width-vp(k) {
                display: flex;
                width: (i * 100 / 12) %;
            }
        }
    }
}

.justify-center {
    justify-content: center;
}

.justify-end {
    justify-content: flex-end;
}

.align-center {
    align-items: center;
}

for i in (0 .. 4) {
    for k, v in directions {
        for vv in v {
            .m{k}-{i} {
                margin-{vv}: rythm(i * 2);
            }

            .p{k}-{i} {
                padding-{vv}: rythm(i * 2);
            }

            for vpk, vpv in viewports {
                .m{k}-{vpk}-{i} {
                    +with-vp(vpk) {
                        margin-{v}: rythm(i * 2);
                    }
                }

                .p{k}-{vpk}-{i} {
                    +with-vp(vpk) {
                        padding-{v}: rythm(i * 2);
                    }
                }
            }
        }
    }
}
