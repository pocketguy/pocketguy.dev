        display: inline;
        content: 'â€¢ ';
        color: colors.main;
    }
}

li > ul, li > ol {
    mt(1);
    pl(5);
}

ul li {
    mt(1)
}

strong {
    font-weight: 700;
}

::selection {
    background-color: colors.main-light;
}

mark, .mark {
    background: colors.main;
    color: colors.text-white;
}
