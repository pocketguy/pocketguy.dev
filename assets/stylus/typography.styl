html {
    box-sizing: border-box;
}

*, *:before, *:after {
    box-sizing: inherit;
}

@require 'vars.styl';

body {
    font-family: 'Anonymous Pro';
    color: colors.text;
    letter-spacing: 1px;
}

h1, .h1, h2, .h2, h3, .h3 {
    font-weight: 700;
}

h1, .h1 {
    font-size: rythm(8);
    margin-top: rythm(8);
}

h2, .h2 {
    font-size: rythm(6);
}

h3, .h3 {
    font-size: rythm(5);
}

blockquote {
    font-size: rythm(4);
    padding-left: rythm(2);
    border-left: rythm(1) solid colors.main;
    padding: rythm(4);
}

p, blockquote, pre, ol, ul, li, .row {
    line-height: rythm(5);

    &:not(:first-child) {
        margin-top: rythm(4);
    }

    & + h1, & + .h1, & + h2, & + .h2, & + h3, & + .h3 {
        margin-top: rythm(8);
    }
}

a {
    color: colors.text;
    text-decoration: underline;
    text-decoration-color: colors.main;
    transition: color td, text-decoration-color td;

    &:visited {
        color: initial;
    }

    &:hover {
        color: colors.main;
    }

    &:focus {
        color: colors.main-dark;
        text-decoration-color: colors.main-dark;
        outline: none;
    }
}

pre {
    overflow: auto;
    background: colors.grey;
    padding: rythm(4) - 1;
    border: 1px solid colors.grey-dark;
}

ol {
    counter-reset: item;

    li:before {
        display: inline;
        content: counter(item) '. ';
        counter-increment: item;
        font-weight: bold;
    }
}

ul {
    li:before {
        display: inline;
        content: 'â€¢ ';
        color: colors.main;
    }
}

strong {
    font-weight: 700;
}

.text-center {
    text-align: center;
}

.text-right {
    text-align: right;
}

::selection {
    background-color: colors.main-light;
}
